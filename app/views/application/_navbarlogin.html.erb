<% if flash[:notice] || flash[:success] || flash[:error] %>
  <nav class="nav flash-active site-wrapper--padding">
<% else %>
  <nav class="nav site-wrapper--padding">
<% end %>


<% if flash[:error] %>
  <div class="error flash-bar col flex-container site-wrapper--padding">
    <p class="flash-type col col--full col--center"><%= flash[:error] %></p>
  </div>
<% end %>
<% if flash[:success] %>
  <div class="success flash-bar col flex-container site-wrapper--padding">
    <p class="flash-type col col--full col--center"><%= flash[:success] %></p>
  </div>
<% end %>

<div class="flex-container col--v-center">
  <div class="dropdown">
    <button class="dropbtn">
      <div class="burger-line"></div>
      <div class="burger-line"></div>
      <div class="burger-line"></div>
    </button>
    <div class="dropdown-content">
      <%= link_to("Log In", login_path) %>
      <%= link_to("Sign Up", signup_path) %>
    </div>
  </div>

  <p class="col col--full2 col--center logo_container logo-font">
    <%= link_to("Watering Can", home_path, :class => "logo") %></p>

    <div class="col col--right nav-end-link">
      <%= link_to('Log In', login_path) %>
    </div>
</div>
</nav>
