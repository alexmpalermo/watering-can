<div class="background plantindexb">
  <%= render partial: "navbar" %>
  <br><br><br>
  <div class="center">
    <h1><%= @plant.name %></h1>
  </div>
  <br>
  <div class="section shadow scroll_box">

      <ul>
        <li>Water <%= @plant.water_quantity %>oz, every <%= @plant.water_frequency %> day(s)</li>
        <% unless @plant.next_water_day.blank? && @plant.last_day_watered.blank? %>
        <li>Last day watered: <%= @plant.last_day_watered.to_date.strftime("%m/%d/%Y") %>, Next water day: <%= @plant.next_water_day.to_date.strftime("%m/%d/%Y") %></li>
        <% end %>
      </ul>

  </div>
</div>
