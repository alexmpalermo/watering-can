<div class="background signupb">
<% if flash[:error] %>
  <div class="error flash-bar col flex-container site-wrapper--padding">
    <p class="flash-type col col--full col--center"><%= flash[:error] %></p>
  </div>
<% end %>
<br>
<h1>Sign Up</h1>

<%= form_for(@user, url: signup_path) do |f| %>
Name: <%= f.text_field :name %>
Email: <%= f.text_field :email %>
Password: <%= f.password_field :password %>
Password Confirmation: <%= f.password_field :password_confirmation %>
<%= f.submit "Submit" %>
<% end %>
</div>
